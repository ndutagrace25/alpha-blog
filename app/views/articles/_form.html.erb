<% if @article.errors.any? %>
<h6>The following errors prevented the article from getting created</h6>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %> <%= form_for @article do |f| %>
<div class="col-md-4">
  <p>
  <%= f.label :title, class: 'form-label' %> <%= f.text_field :title, class:
  'form-control' %>
</p>
<p>
  <%= f.label :description, class: 'form-label'%> <%= f.text_area :description,
  class: 'form-control' %>
</p>
<p><%= f.submit class: 'btn btn-success' %></p>
<% end %> <%= link_to "Back to article listing", articles_path %>
</div>

