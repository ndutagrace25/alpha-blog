<%= notice %>
<div
  class="
    card
    bg-light
    shadow
    col-md-6
    p-3
    d-flex
    justify-content-center
    align-items-center
    flex-column
    mt-5
  "
>
  <h6>Selected article</h6>
  <div class="">
    <p>
      <strong>Title:</strong>
      <%= @article.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @article.description %>
    </p>
    <div class="d-flex justify-content-between align-items-between col-md-5">
      <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-sm
      btn-info' %> | <%= link_to 'Back', articles_path, class: 'btn btn-sm btn-success' %>
    </div>
  </div>
</div>
